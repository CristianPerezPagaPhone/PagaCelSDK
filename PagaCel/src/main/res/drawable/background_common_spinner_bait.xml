<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp"
                        android:color="@color/yellowBait" />
                    <padding android:right="@dimen/marginSmall"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center_vertical|right"
                    android:src="@drawable/ic_dropdown_common_primary"/>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp"
                        android:color="@color/iconInactive" />
                    <padding android:right="@dimen/marginSmall"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center_vertical|right"
                    android:src="@drawable/ic_dropdown_common_black"/>
            </item>
        </layer-list>
    </item>
</selector>