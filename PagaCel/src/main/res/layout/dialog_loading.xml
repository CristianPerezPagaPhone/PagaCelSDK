<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialogWidth"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radiusSmall"
    android:background="@color/whiteTekton"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteTekton"
        >

        <ProgressBar
            android:id="@+id/dialogProgressBar"
            android:layout_width="@dimen/loadingSize"
            android:layout_height="@dimen/loadingSize"
            android:layout_marginStart="@dimen/marginXLarge"
            android:layout_marginTop="@dimen/marginBig"
            android:layout_marginEnd="@dimen/marginXLarge"
            android:indeterminateTint="@color/primaryDark"
            android:indeterminateTintMode="src_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialogMessageTextView"
            style="@style/PagaPhone.TextAppearance.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginSmall"
            android:layout_marginBottom="@dimen/marginBig"
            android:gravity="center"
            android:text="Cargando..."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogProgressBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>