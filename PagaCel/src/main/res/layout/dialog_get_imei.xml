<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radiusSmall"
    app:cardBackgroundColor="#ffffff"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogValidateIMEITitleTextView"
            style="@style/PagaPhone.TextAppearance.TextView.Form.Title1"
            android:layout_width="@dimen/viewFitConstraints"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginNormal"
            android:layout_marginTop="@dimen/marginSmall"
            android:layout_marginEnd="@dimen/marginNormal"
            android:text="@string/dialog_imei_compatibility_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dialogValidateIMEISeparatorView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separatorHeight"
            android:layout_marginTop="@dimen/marginSmall"
            android:background="@color/iconInactive"
            app:layout_constraintTop_toBottomOf="@+id/dialogValidateIMEITitleTextView" />

        <TextView
            android:id="@+id/dialogValidateIMEISubtitleTextView"
            style="@style/PagaPhone.TextAppearance.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginNormal"
            android:text="@string/fr_compatibility_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogValidateIMEISeparatorView" />


        <EditText
            android:id="@+id/dialogValidateIMEIInputTextInputLayout"
            style="@style/PagaPhone.Widget.EditText.Form"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextNormal"
            android:autofillHints="@string/act_auth_input_password_hint"
            android:gravity="center_vertical"
            android:hint="@string/fr_compatibility_imei"
            android:inputType="number"
            android:maxLength="15"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/marginStandard"
            android:layout_marginStart="@dimen/marginNormal"
            android:layout_marginEnd="@dimen/marginNormal"

            app:layout_constraintEnd_toStartOf="@+id/dialogValidateIMEIContinueButton"
            app:layout_constraintStart_toStartOf="@+id/dialogValidateIMEIContinueButton"
            app:layout_constraintTop_toBottomOf="@+id/dialogValidateIMEISubtitleTextView"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/dialogValidateIMEIErrorTextView"
            style="@style/PagaPhone.TextAppearance.TextView.Form.Error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocurrio un error"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/dialogValidateIMEIInputTextInputLayout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/dialogValidateIMEIInputTextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/dialogValidateIMEIInputTextInputLayout" />

        <TextView
            android:id="@+id/dialogValidateShowIMEITextView"
            style="@style/PagaPhone.TextAppearance.TextView.Form.CapitalizedX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:gravity="right"
            android:text="Mostrar mi imei"
            app:layout_constraintBottom_toTopOf="@+id/dialogValidateIMEIContinueButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.918"
            app:layout_constraintStart_toEndOf="@+id/dialogValidateIMEIErrorTextView"
            app:layout_constraintTop_toBottomOf="@+id/dialogValidateIMEIInputTextInputLayout"
            app:layout_constraintVertical_bias="0.111" />

        <ProgressBar
            android:id="@+id/dialogValidateIMEIProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginStandard"
            android:layout_marginBottom="@dimen/marginNormal"
            android:indeterminateTint="#e3603c"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogValidateIMEIInputTextInputLayout" />

        <Button
            android:id="@+id/dialogValidateIMEIContinueButton"
            style="@style/PagaPhone.Widget.Button.Form.Link.Capitalized"
            android:layout_width="@dimen/viewFitConstraints"
            android:layout_height="@dimen/buttonSizeNormal"
            android:layout_marginStart="@dimen/marginNormal"
            android:layout_marginTop="@dimen/marginStandard"
            android:layout_marginEnd="@dimen/marginNormal"
            android:background="@drawable/background_button_rounded"
            android:text="Validar"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogValidateIMEIErrorTextView" />

        <Button
            android:id="@+id/dialogValidateIMEICancelButton"
            style="@style/PagaPhone.Widget.Button.Form.Link.Capitalized"
            android:layout_width="@dimen/viewFitConstraints"
            android:layout_height="@dimen/buttonSizeNormal"
            android:layout_marginTop="@dimen/marginSmall"
            android:layout_marginBottom="@dimen/marginNormal"
            android:background="@drawable/background_button_rounded_transparent"
            android:text="Cancelar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/dialogValidateIMEIContinueButton"
            app:layout_constraintStart_toStartOf="@+id/dialogValidateIMEIContinueButton"
            app:layout_constraintTop_toBottomOf="@id/dialogValidateIMEIContinueButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>